<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.geometry.Insets?>
<HBox fx:controller="ru.putink.cometa.GeneralController"
      xmlns:fx="http://javafx.com/fxml" alignment="center" minWidth="700" minHeight="500">
    <padding>
        <Insets left="10" right="10" top="10" bottom="10"/>
    </padding>
    <VBox alignment="CENTER" spacing="20">
        <TextField promptText="Количество итераций" fx:id="countGeneration"/>
        <TextField promptText="Предел генерации" fx:id="limitDigitGeneration"/>
        <Button text="Построить" fx:id="buildGeneration"/>
    </VBox>
    <LineChart fx:id="graphicsPane">
        <xAxis>
            <NumberAxis label="Значение" tickUnit="1"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Количество" tickUnit="1"/>
        </yAxis>
    </LineChart>
</HBox>